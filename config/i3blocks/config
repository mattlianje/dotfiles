# i3blocks config file

# Shows the wifi signal strength
[wifi]
label=WIFI
command=/usr/share/i3blocks/wifi
interval=5

# Shows whether Bluetooth is connected
[bluetooth]
label=BT
command=/usr/share/i3blocks/bluetooth
interval=5

[cpu_temp]
command=$HOME/.scripts/cpu_temp.sh
interval=10

[battery_2]
command=$HOME/.scripts/battery.sh
interval=30

[weather]
command=$HOME/.scripts/weather.sh
interval=60

# Shows the system time
[time]
command=$HOME/.scripts/time_date.sh
interval=60

[cpu_ram]
command=$HOME/.scripts/cpu_ram.sh
interval=10

[brightness]
command=$HOME/.scripts/brightness.sh
interval=1
signal=10

[volume]
command=$HOME/.scripts/volume.sh
interval=1
signal=10

