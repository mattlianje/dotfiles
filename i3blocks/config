# i3blocks config file

# Shows the battery percentage
[battery]
label=BAT(S)-
command=$HOME/github/dotfiles/i3blocks/battery.sh
interval=5

# Shows the wifi signal strength
[wifi]
label=WIFI
command=/usr/share/i3blocks/wifi
interval=5

# Shows whether Bluetooth is connected
[bluetooth]
label=BT
command=/usr/share/i3blocks/bluetooth
interval=5

# Shows total ram percentage
[ram]
command=$HOME/github/dotfiles/i3blocks/system_status.sh ram
interval=5

# Shows total CPU percentage
[cpu]
command=$HOME/github/dotfiles/i3blocks/system_status.sh cpu
interval=5

# Shows the top 10 CPU processes when clicked
[top_cpu]
label=CPU
command=$HOME/github/dotfiles/i3blocks/top_cpu.sh
interval=10
signal=10

# Shows the top 10 RAM processes when clicked
[top_ram]
label=RAM
command=$HOME/github/dotfiles/i3blocks/top_ram.sh
interval=10
signal=12

# Shows the system time
[time]
label=TIME
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

# Right click for brightness down, left click for brightness up
[brightness]
command=$HOME/github/dotfiles/i3blocks/brightness.sh
interval=1
signal=10

# Right click for volume down - left click for volume up 
[volume]
command=$HOME/github/dotfiles/i3blocks/volume.sh
interval=1
signal=10

# Opens system preferences on signal
[sys_prefs]
command=$HOME/github/dotfiles/i3blocks/open_prefs.sh
interval=once
signal=1
